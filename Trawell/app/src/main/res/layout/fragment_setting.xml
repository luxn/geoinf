<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.app.chasebank"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_scrollFlags="scroll"
    tools:context="de.jadehs.trawell.api.MainActivity">

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="255dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:text="Create Account"
        app2:layout_constraintHorizontal_bias="0.502"
         />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="false">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="366dp"
                android:layout_height="56dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginLeft="8dp"
                app2:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app2:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="7dp"
                app2:layout_constraintHorizontal_bias="0.0" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="Englisch"
                app2:layout_constraintLeft_toLeftOf="parent"
                app2:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"
                app2:layout_constraintTop_toBottomOf="@+id/textView3" />

            <RadioButton
                android:id="@+id/radioButton9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="Deutsch"
                app2:layout_constraintLeft_toLeftOf="parent"
                app2:layout_constraintRight_toRightOf="parent"
                app2:layout_constraintTop_toBottomOf="@+id/radioButton2"
                app2:layout_constraintHorizontal_bias="0.501" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sprache"
                tools:layout_editor_absoluteX="99dp"
                tools:layout_editor_absoluteY="95dp" />

            <Button
                android:id="@+id/changePasswordBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="183dp"
                android:background="@color/colorPrimary"
                android:text="Change Password"
                app2:layout_constraintTop_toBottomOf="@+id/radioButton9"
                android:layout_marginLeft="8dp"
                app2:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app2:layout_constraintRight_toRightOf="parent"
                app2:layout_constraintHorizontal_bias="0.502" />

            <Button
                android:id="@+id/saveChangesBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Save Changes"
                android:layout_marginTop="8dp"
                app2:layout_constraintTop_toBottomOf="@+id/changePasswordBTN"
                android:layout_marginLeft="8dp"
                app2:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app2:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</LinearLayout>
