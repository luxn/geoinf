<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.app.chasebank"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_scrollFlags="scroll"
    tools:context="de.jadehs.trawell.MainActivity">

    <EditText
        android:id="@+id/editText16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="false">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="366dp"
                android:layout_height="56dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginLeft="8dp"
                app2:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app2:layout_constraintRight_toRightOf="parent"
                app2:layout_constraintHorizontal_bias="1.0"
                tools:layout_editor_absoluteY="1dp" />

            <EditText
                android:id="@+id/editText14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Old Password"
                tools:layout_editor_absoluteX="85dp"
                tools:layout_editor_absoluteY="90dp" />

            <EditText
                android:id="@+id/editText15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="New Password"
                tools:layout_editor_absoluteX="85dp"
                android:layout_marginTop="8dp"
                app2:layout_constraintTop_toBottomOf="@+id/editText14" />

            <EditText
                android:id="@+id/editText17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Confirm New Password"
                app2:layout_constraintTop_toBottomOf="@+id/editText15"
                tools:layout_editor_absoluteX="85dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="Save Password"
                app2:layout_constraintLeft_toLeftOf="parent"
                app2:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="447dp" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</LinearLayout>
