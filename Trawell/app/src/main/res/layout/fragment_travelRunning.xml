<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_scrollFlags="scroll"
    tools:context="de.jadehs.trawell.api.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="false">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"
                android:text="    Planen Sie Ihren Reiseverlauf"
                android:textColor="@color/colorAccent"
                android:textColorLink="@color/colorAccent"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stadt"
                tools:layout_editor_absoluteX="59dp"
                tools:layout_editor_absoluteY="79dp" />

            <TextView
                android:id="@+id/Dauer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dauer"
                tools:layout_editor_absoluteX="255dp"
                tools:layout_editor_absoluteY="79dp" />

            <Button
                android:id="@+id/readyBTN"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:layout_marginBottom="0dp"
                android:background="@color/colorPrimary"
                android:text="Fertig"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/tableRow"
                tools:layout_editor_absoluteX="16dp"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/housingBTN"
                android:layout_width="170dp"
                android:layout_height="48dp"
                android:background="@color/colorPrimary"
                android:text="UnterkÃ¼nfte"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/tableRow"
                android:layout_marginRight="16dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TableRow
                android:layout_width="319dp"
                android:layout_height="294dp"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/Dauer"
                tools:layout_editor_absoluteX="33dp"
                android:id="@+id/tableRow" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</LinearLayout>
