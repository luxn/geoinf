<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/lib/com.app.chasebank"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_scrollFlags="scroll"
    tools:context="de.jadehs.trawell.api.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="false">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="368dp"
                android:layout_height="150dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher"
                tools:layout_editor_absoluteX="8dp"
                app2:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="366dp"
                android:layout_height="56dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginTop="8dp"
                app2:layout_constraintTop_toBottomOf="@+id/imageView8"
                android:layout_marginLeft="8dp"
                app2:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app2:layout_constraintRight_toRightOf="parent"
                app2:layout_constraintHorizontal_bias="0.384" />

            <ImageButton
                android:id="@+id/informationBTN"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp"
                app2:layout_constraintRight_toRightOf="parent"
                app2:layout_constraintTop_toBottomOf="@+id/newTourBTN"
                app:layout_constraintLeft_toLeftOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageButton
                android:id="@+id/settingBTN"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                app2:layout_constraintLeft_toLeftOf="parent"
                app2:layout_constraintTop_toBottomOf="@+id/newTourBTN"
                app:layout_constraintRight_toRightOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/myTourBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Meine Touren"
                android:layout_marginTop="52dp"
                app2:layout_constraintTop_toBottomOf="@+id/imageView9"
                android:layout_marginRight="8dp"
                app2:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app2:layout_constraintLeft_toLeftOf="parent" />

            <Button
                android:id="@+id/newTourBTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Neue Tour"
                android:layout_marginTop="8dp"
                app2:layout_constraintTop_toBottomOf="@+id/myTourBTN"
                android:layout_marginRight="8dp"
                app2:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app2:layout_constraintLeft_toLeftOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</LinearLayout>
